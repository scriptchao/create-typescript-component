{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom","es5"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true, // 启用decorators
    "allowSyntheticDefaultImports": true // 允许从没有设置默认导出的模块中默认导入

  },

  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
